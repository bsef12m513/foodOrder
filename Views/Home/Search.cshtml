@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using foodOrder.Models

<body style='background-color:#4b4545; background-attachment:fixed ; margin-left: 8em; margin-right: 8em; margin-top: 4em; margin-bottom: 4em;'>

    <p style="font-family:'Lucida Calligraphy'; font-size:40px; font:bold ; color:#ffffff; padding:20px; margin-left:100px "> Items<font style="margin-left:400px" >Categories</font></p>

    
    <div class="row">

        <div class="col-md-5" style="background-color:black;  margin-top:20px;margin-left:80px;border-radius:20px; box-shadow: 5px 5px 10px #a19c9c">
            
            <table border="1" style=" border-width: 20px; border-color: black; color: #ffffff; font-family: 'Lucida Calligraphy'">

                @foreach (var i in ViewBag.Items)
                {
                    <tr><td style="padding:10px">@i.item</td><td style="padding:10px">@i.price</td></tr>
                }

            </table>
            <br /><br /><br />

        </div>

        <div class="col-md-5" style="background-color:black; border-radius:20px; box-shadow: 5px 5px 10px #a19c9c; margin:20px">
            
            <table border="1" style=" border-width: 4px; border-color: black; color: #ffffff; font-family: 'Lucida Calligraphy' ">

                @foreach (Catagoury i in ViewBag.cat)
                {
                    <tr><td style="font-size:40px">@Html.ActionLink(i.name, "showcategory", new { id = i.Id })</td></tr>

                }
            </table>
            <br /><br /><br />

        </div>

    </div>

</body>
